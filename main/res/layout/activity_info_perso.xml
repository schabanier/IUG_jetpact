<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.InfoPersoActivity"
    android:background="#ff24088f">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informations"
        android:id="@+id/textView14"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextIdentifiant1"
        android:layout_marginTop="260dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:editable="true"
        android:background="#ff5e6eff"
        android:visibility="visible" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:background="#ff5e6eff"
        android:layout_marginTop="320dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_alignRight="@+id/editTextIdentifiant1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail"
        android:id="@+id/textView4"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_alignEnd="@+id/Identifiant"
        android:layout_alignBottom="@+id/editTextEmail"
        android:layout_alignLeft="@+id/textView3" />

    <Button
        style="@android:style/ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/buttonCreer"
        android:background="#ff5e6eff"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:onClick="creerCompte"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identifiant"
        android:id="@+id/Identifiant"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginTop="170dp"
        android:layout_alignBaseline="@+id/editTextIdentifiant1" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextPrenom"
        android:editable="true"
        android:background="#ff5e6eff"
        android:visibility="visible"
        android:layout_alignEnd="@+id/editTextIdentifiant1"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_alignLeft="@+id/Identifiant"
        android:layout_alignStart="@+id/Identifiant"
        android:layout_marginTop="110dp"
        android:layout_alignBaseline="@+id/editTextPrenom" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNom"
        android:editable="true"
        android:background="#ff5e6eff"
        android:visibility="visible"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:id="@+id/textView10"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_toStartOf="@+id/editTextNom"
        android:layout_alignLeft="@+id/Identifiant"
        android:layout_alignTop="@+id/editTextNom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personnelles"
        android:id="@+id/textView15"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Acceuil"
        android:id="@+id/button"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retourAccueil"
        android:layout_above="@+id/Identifiant"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Configuration"
        android:id="@+id/button2"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retourConfiguration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Identifiant"
        android:layout_alignEnd="@+id/Identifiant"
       />

</RelativeLayout>
